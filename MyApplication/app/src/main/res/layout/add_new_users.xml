<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.muscleup.luticussoftwareinc.muscleup.AddNewUsers">

   <TextView
       android:id="@+id/textViewNewUserWelcome"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="@dimen/mainActivityUserName"
       android:text="Welcome To MuscleUp"
       android:layout_centerHorizontal="true"
       android:layout_alignParentTop="true"
       android:layout_marginBottom="@dimen/welcomeMargin"
       />
    <TextView
        android:id="@+id/textViewTypeUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:paddingRight="61dp"
        android:textSize="@dimen/mainActivityUserName"
        android:layout_below="@+id/textViewNewUserWelcome"
        android:layout_marginRight="@dimen/marginBetweenTextAndInput"
        android:layout_marginBottom="@dimen/marginBetweenTextAndInput"
    />

    <EditText
        android:id="@+id/editTextTypeUserName"
        android:layout_width="@dimen/mainActivityLoginButton"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:ellipsize="start"
        android:textSize="@dimen/mainActivityUserName"
        android:background="@drawable/edittextstyle"
        android:layout_toRightOf="@+id/textViewTypeUserName"
        android:layout_below="@+id/textViewNewUserWelcome"
        android:textColor="#000000"
       />
    <TextView
        android:id="@+id/textViewNewUserPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Password"
        android:textSize="@dimen/mainActivityUserName"
        android:layout_below="@+id/textViewTypeUserName"
        android:layout_marginRight="@dimen/marginBetweenTextAndInput"
        />
    <EditText
        android:layout_width="@dimen/mainActivityLoginButton"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:ellipsize="start"
        android:textSize="@dimen/mainActivityUserName"
        android:background="@drawable/edittextstyle"
        android:layout_toRightOf="@+id/textViewNewUserPassword"
        android:layout_below="@+id/textViewTypeUserName"
        android:textColor="#000000"/>


</RelativeLayout>
